{
  "name": "@kdcsoftware/ddb",
  "version": "0.1.0",
  "description": "Lightweight DynamoDB ODM",
  "main": "lib/index.js",
  "scripts": {
    "build:commonjs": "babel src --out-dir lib",
    "clean": "rm -fR lib",
    "build": "npm run clean && npm run bundle",
    "lint": "eslint src --ext .js",
    "test": "jest",
    "test:watch": "DEBUG='jest:*' jest --watchAll",
    "coverage": "jest --coverage",
    "bundle": "parcel build src/index.js"
  },
  "keywords": [
    "kdc",
    "software",
    "dynamodb",
    "odm",
    "object",
    "modeling"
  ],
  "author": {
    "name": "Ian Dela Cruz",
    "email": "iandc76@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@types/jest": "^26.0.10",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "dynamodb-local": "0.0.31",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "lint-staged": "^10.2.11",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "aws-sdk": "^2.738.0",
    "debug": "^4.1.1"
  },
  "targets": {
    "main": {
      "engines": {
        "node": ">=10.x"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint src --ext .js --fix",
      "pretty-quick --staged",
      "git add"
    ]
  }
}
